                <CheckBox Grid.Column="0" Content="Enable Hotkeys"
                          IsChecked="{Binding IsEnableHotkeysEnabled}"
                          Margin="0,0,0,0" />
                <CheckBox Grid.Column="1" Content="Stutter Fix"
                          IsChecked="{Binding IsStutterFixEnabled}"
                          Margin="0,0,0,0" />
                <CheckBox Grid.Column="2" Content="Always On Top"
                          IsChecked="{Binding IsAlwaysOnTopEnabled}"
                          Margin="0,0,0,0" />
            </Grid>

