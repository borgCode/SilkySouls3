<UserControl x:Class="SilkySouls3.Views.EnemyTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:SilkySouls3.Converters"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanAndConverter x:Key="BooleanAndConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:ImmuneFillConverter x:Key="ImmuneFillConverter" />
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,5">
            <StackPanel Margin="5">
                <TextBlock Text="Target Controls"
                           FontWeight="Bold"
                           Margin="0,0,0,5" />


                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
    
                    <CheckBox Grid.Column="0" 
                              Content="Enable Target Options"
                              IsChecked="{Binding IsTargetOptionsEnabled}"
                              Margin="0,0,0,0" />

                    <StackPanel Grid.Column="1"
                                Visibility="{Binding IsTargetOptionsEnabled, Converter={StaticResource BoolToVis}}"
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <xctk:IntegerUpDown Width="80" Margin="5,2"
                                            Value="{Binding CustomHp}"
                                            Minimum="0"/>
                        <Button Content="Set hp" Margin="1" Click="OnSetCustomHpClick">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                    </StackPanel>
                </Grid>

                <StackPanel Visibility="{Binding IsTargetOptionsEnabled, Converter={StaticResource BoolToVis}}">
                    <TextBlock HorizontalAlignment="Center" Margin="0,0,0,5">
                        <Run Text="Health: " />
                        <Run Text="{Binding TargetCurrentHealth, Mode=OneWay}" />
                        <Run Text="/" />
                        <Run Text="{Binding TargetMaxHealth, Mode=OneWay}" />
                    </TextBlock>

                    <ProgressBar Width="250" Height="20"
                                 Value="{Binding TargetCurrentHealth}"
                                 Maximum="{Binding TargetMaxHealth, FallbackValue=100}"
                                 Margin="0,0,0,5">
                        <ProgressBar.Template>
                            <ControlTemplate TargetType="ProgressBar">
                                <Border BorderBrush="#444444" BorderThickness="1" Background="#222222" CornerRadius="3">
                                    <Grid x:Name="PART_Track">
                                        <Rectangle x:Name="PART_Indicator"
                                                   Fill="#4CAF50"
                                                   HorizontalAlignment="Left"
                                                   RadiusX="2" RadiusY="2"
                                                   Margin="1" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </ProgressBar.Template>
                    </ProgressBar>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <UniformGrid Grid.Column="0" Rows="1" Columns="5">
                            <Button Content="Kill" Margin="1" Click="OnHealthButtonClick" CommandParameter="0">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="25%" Margin="1" Click="OnHealthButtonClick" CommandParameter="25">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="50%" Margin="1" Click="OnHealthButtonClick" CommandParameter="50">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="75%" Margin="1" Click="OnHealthButtonClick" CommandParameter="75">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="100%" Margin="1" Click="OnHealthButtonClick" CommandParameter="100">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                        </UniformGrid>

                        <CheckBox Grid.Column="1" Content="Freeze Health" Margin="10,0,0,0"
                                  IsChecked="{Binding IsFreezeHealthEnabled}">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                        </CheckBox>
                    </Grid>
                    <Grid Margin="0,5,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Show:" Margin="0,0,0,5" />

                        <StackPanel Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal">
                            <CheckBox Content="Pop out Resistances"
                                      IsEnabled="{Binding IsTargetOptionsEnabled}"
                                      IsChecked="{Binding IsResistancesWindowOpen}"
                                      Margin="0,2" />

                            <Border
                                Background="#3498db"
                                CornerRadius="10"
                                Width="12"
                                Height="12"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                ToolTip="Will only stay on top of game in windowed mode"
                                ToolTipService.InitialShowDelay='100'>
                                <TextBlock Text="i"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           FontSize="10" />
                            </Border>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,5,10,0">
                                <CheckBox Content="Poise" Margin="0,5"
                                          IsChecked="{Binding ShowPoise, FallbackValue=False}" />
                                <CheckBox Content="Bleed" Margin="0,5"
                                          IsChecked="{Binding ShowBleed, FallbackValue=False}" />
                                <CheckBox Content="Poison" Margin="0,5"
                                          IsChecked="{Binding ShowPoison, FallbackValue=False}" />
                                <CheckBox Content="Toxic" Margin="0,5"
                                          IsChecked="{Binding ShowToxic, FallbackValue=False}" />
                                <CheckBox Content="Frost" Margin="0,5"
                                          IsChecked="{Binding ShowFrost, FallbackValue=False}" />
                                <CheckBox Content="Show All" Margin="0,5"
                                          IsChecked="{Binding ShowAllResistances, FallbackValue=False}" />
                            </StackPanel>

                            <Grid Grid.Column="1" Margin="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0"
                                            Visibility="{Binding ShowPoise, Converter={StaticResource BoolToVis}, FallbackValue=Visible}"
                                            Margin="0,0,0,5">
                                    <ProgressBar Height="25"
                                                 Width="250"
                                                 Value="{Binding TargetCurrentPoise}"
                                                 Maximum="{Binding TargetMaxPoise, FallbackValue=100}">
                                        <ProgressBar.Template>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Border BorderBrush="#444444" BorderThickness="1" Background="#222222"
                                                        CornerRadius="3">
                                                    <Grid x:Name="PART_Track">
                                                        <Rectangle x:Name="PART_Indicator"
                                                                   Fill="#4CAF50"
                                                                   HorizontalAlignment="Left"
                                                                   RadiusX="2" RadiusY="2"
                                                                   Margin="1" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="White" FontWeight="SemiBold">
                                                            <Run
                                                                Text="{Binding TargetCurrentPoise, StringFormat={}{0:F1}, Mode=OneWay}" />
                                                            <Run Text="/" />
                                                            <Run
                                                                Text="{Binding TargetMaxPoise, StringFormat={}{0:F1}, Mode=OneWay}" />
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </ProgressBar.Template>
                                    </ProgressBar>
                                    <TextBlock
                                        Text="{Binding TargetPoiseTimer, StringFormat={}Poise: {0:F1}s, Mode=OneWay}"
                                        HorizontalAlignment="Center" Margin="0,2,0,0" />
                                </StackPanel>

                                <Grid Grid.Row="1" Grid.RowSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0"
                                                Visibility="{Binding ShowBleed, Converter={StaticResource BoolToVis}, FallbackValue=Visible}"
                                                Margin="0,0,5,5">
                                        <Grid>
                                            <ProgressBar Height="25"
                                                         Value="{Binding TargetCurrentBleed}"
                                                         Maximum="{Binding TargetMaxBleed, FallbackValue=100}">
                                                <ProgressBar.Template>
                                                    <ControlTemplate TargetType="ProgressBar">
                                                        <Border BorderBrush="#444444" BorderThickness="1"
                                                                Background="#222222"
                                                                CornerRadius="3">
                                                            <Grid x:Name="PART_Track">
                                                                <Rectangle x:Name="PART_Indicator"
                                                                           Fill="{Binding IsBleedImmune, Converter={StaticResource ImmuneFillConverter}, ConverterParameter=#D32F2F}"
                                                                           HorizontalAlignment="Left"
                                                                           RadiusX="2" RadiusY="2"
                                                                           Margin="1" />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ProgressBar.Template>
                                            </ProgressBar>

                                            <TextBlock Text="IMMUNE"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding IsBleedImmune, Converter={StaticResource BoolToVis}}" />
                                        </Grid>
                                        <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0">
                                            <Run Text="Bleed " />
                                            <Run Text="{Binding TargetCurrentBleed, Mode=OneWay}" />
                                            <Run Text="/" />
                                            <Run Text="{Binding TargetMaxBleed, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1"
                                                Visibility="{Binding ShowPoison, Converter={StaticResource BoolToVis}, FallbackValue=Visible}"
                                                Margin="5,0,0,5">
                                        <Grid>
                                            <ProgressBar Height="25"
                                                         Value="{Binding TargetCurrentPoison}"
                                                         Maximum="{Binding TargetMaxPoison, FallbackValue=100}">
                                                <ProgressBar.Template>
                                                    <ControlTemplate TargetType="ProgressBar">
                                                        <Border BorderBrush="#444444" BorderThickness="1"
                                                                Background="#222222"
                                                                CornerRadius="3">
                                                            <Grid x:Name="PART_Track">
                                                                <Rectangle x:Name="PART_Indicator"
                                                                           Fill="{Binding IsPoisonImmune, Converter={StaticResource ImmuneFillConverter}, ConverterParameter=#7B1FA2}"
                                                                           HorizontalAlignment="Left"
                                                                           RadiusX="2" RadiusY="2"
                                                                           Margin="1" />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ProgressBar.Template>
                                            </ProgressBar>

                                            <TextBlock Text="IMMUNE"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding IsPoisonImmune, Converter={StaticResource BoolToVis}}" />
                                        </Grid>
                                        <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0">
                                            <Run Text="Poison " />
                                            <Run Text="{Binding TargetCurrentPoison, Mode=OneWay}" />
                                            <Run Text="/" />
                                            <Run Text="{Binding TargetMaxPoison, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0"
                                                Visibility="{Binding ShowToxic, Converter={StaticResource BoolToVis}, FallbackValue=Visible}"
                                                Margin="0,5,5,0">
                                        <Grid>
                                            <ProgressBar Height="25"
                                                         Value="{Binding TargetCurrentToxic}"
                                                         Maximum="{Binding TargetMaxToxic, FallbackValue=100}">
                                                <ProgressBar.Template>
                                                    <ControlTemplate TargetType="ProgressBar">
                                                        <Border BorderBrush="#444444" BorderThickness="1"
                                                                Background="#222222"
                                                                CornerRadius="3">
                                                            <Grid x:Name="PART_Track">
                                                                <Rectangle x:Name="PART_Indicator"
                                                                           Fill="{Binding IsToxicImmune, Converter={StaticResource ImmuneFillConverter}, ConverterParameter=#CE93D8}"
                                                                           HorizontalAlignment="Left"
                                                                           RadiusX="2" RadiusY="2"
                                                                           Margin="1" />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ProgressBar.Template>
                                            </ProgressBar>

                                            <TextBlock Text="IMMUNE"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding IsToxicImmune, Converter={StaticResource BoolToVis}}" />
                                        </Grid>
                                        <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0">
                                            <Run Text="Toxic " />
                                            <Run Text="{Binding TargetCurrentToxic, Mode=OneWay}" />
                                            <Run Text="/" />
                                            <Run Text="{Binding TargetMaxToxic, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1"
                                                Visibility="{Binding ShowFrost, Converter={StaticResource BoolToVis}, FallbackValue=Visible}"
                                                Margin="5,5,0,0">
                                        <Grid>
                                            <ProgressBar Height="25"
                                                         Value="{Binding TargetCurrentFrost}"
                                                         Maximum="{Binding TargetMaxFrost, FallbackValue=100}">
                                                <ProgressBar.Template>
                                                    <ControlTemplate TargetType="ProgressBar">
                                                        <Border BorderBrush="#444444" BorderThickness="1"
                                                                Background="#222222"
                                                                CornerRadius="3">
                                                            <Grid x:Name="PART_Track">
                                                                <Rectangle x:Name="PART_Indicator"
                                                                           Fill="#2196F3"
                                                                           HorizontalAlignment="Left"
                                                                           RadiusX="2" RadiusY="2"
                                                                           Margin="1" />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ProgressBar.Template>
                                            </ProgressBar>

                                            <TextBlock Text="IMMUNE"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding IsFrostImmune, Converter={StaticResource BoolToVis}}" />
                                        </Grid>
                                        <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0">
                                            <Run Text="Frost " />
                                            <Run Text="{Binding TargetCurrentFrost, Mode=OneWay}" />
                                            <Run Text="/" />
                                            <Run Text="{Binding TargetMaxFrost, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Speed Modifier:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0" />

                        <xctk:DoubleUpDown x:Name="SpeedUpDown" Grid.Column="1"
                                           Value="{Binding TargetSpeed}"
                                           FormatString="F2"
                                           Minimum="0"
                                           Maximum="5"
                                           Increment="0.50"
                                           Width="100"
                                           PreviewKeyDown="SpeedUpDown_PreviewKeyDown"
                                           LostFocus="SpeedUpDown_LostFocus"
                                           HorizontalAlignment="Left">
                            <xctk:DoubleUpDown.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </xctk:DoubleUpDown.IsEnabled>
                        </xctk:DoubleUpDown>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15,0,0,0">
                            <CheckBox Content="Freeze Target AI">
                                <CheckBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </CheckBox.IsEnabled>
                                <CheckBox.IsChecked>
                                    <Binding Path="IsDisableTargetAiEnabled" />
                                </CheckBox.IsChecked>
                            </CheckBox>

                            <CheckBox Content="Targeting View" Margin="5,0,0,0">
                                <CheckBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsValidTarget" />
                                    </MultiBinding>
                                </CheckBox.IsEnabled>
                                <CheckBox.IsChecked>
                                    <Binding Path="IsTargetingViewEnabled" />
                                </CheckBox.IsChecked>
                            </CheckBox>
                        </StackPanel>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <CheckBox x:Name="RepeatActCheckbox" Content="Repeat Last Act" Margin="10,0,0,0">
                            <CheckBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </CheckBox.IsEnabled>
                            <CheckBox.IsChecked>
                                <Binding Path="IsRepeatActEnabled" />
                            </CheckBox.IsChecked>
                        </CheckBox>
                        <TextBlock Text="Last Act: " Margin="20,0,0,0" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding LastAct}" VerticalAlignment="Center" Width="20" TextAlignment="Right" />

                        <TextBlock Text="Force Act: " Margin="30,0,10,0" VerticalAlignment="Center" />
                        <xctk:IntegerUpDown Width="50" Height="20"
                                            Value="{Binding ForceAct, UpdateSourceTrigger=PropertyChanged}"
                                            Minimum="0"
                                            Maximum="255"
                                            VerticalAlignment="Center">
                            <xctk:IntegerUpDown.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsValidTarget" />
                                </MultiBinding>
                            </xctk:IntegerUpDown.IsEnabled>
                        </xctk:IntegerUpDown>
                        <Border
                            Background="#3498db"
                            CornerRadius="10"
                            Width="12"
                            Height="12"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            ToolTip="Force Act:&#x0A;• Enter 0 for normal behavior&#x0A;• Enter a number to repeat a specific action&#x0A;• Numbers exceeding available acts will be ignored"
                            ToolTipService.InitialShowDelay='100'>
                            <TextBlock Text="i"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="10" />
                        </Border>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="#333"
                    CornerRadius="3"
                    Margin="0,0,5,0">
                <StackPanel Margin="5">
                    <TextBlock Text="Global Enemy Options"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />

                    <UniformGrid Columns="1">
                        <CheckBox Content="Disable AI"
                                  IsChecked="{Binding IsAllDisableAiEnabled}"
                                  Margin="0,2" />

                        <CheckBox Content="All No Damage"
                                  IsChecked="{Binding IsAllNoDamageEnabled}"
                                  Margin="0,2" />
                        <CheckBox Content="All No Death"
                                  IsChecked="{Binding IsAllNoDeathEnabled}"
                                  Margin="0,2" />
                        <CheckBox Content="All Repeat Action"
                                  IsChecked="{Binding IsAllRepeatActEnabled}"
                                  Margin="0,2" />
                    </UniformGrid>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    BorderThickness="1"
                    BorderBrush="#333"
                    CornerRadius="3"
                    Margin="5,0,0,0"
                    Visibility="{Binding IsTargetOptionsEnabled, Converter={StaticResource BoolToVis}}">
                <StackPanel Margin="5">
                    <TextBlock Text="Cinder"
                               FontWeight="Bold"
                               Margin="0,0,0,5"
                               Padding="5, 0, 0, 0" />
                    <WrapPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Button Content="Sword"
                                Margin="0,0,5,5"
                                Padding="8,3"
                                Click="OnPhaseButtonClick" CommandParameter="0"
                                MinWidth="40">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="AreCinderOptionsEnabled" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                        <Button Content="Lance"
                                Margin="0,0,5,5"
                                Padding="8,3"
                                Click="OnPhaseButtonClick" CommandParameter="1"
                                MinWidth="40">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="AreCinderOptionsEnabled" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                        <Button Content="Curved"
                                Margin="0,0,5,5"
                                Padding="8,3"
                                Click="OnPhaseButtonClick" CommandParameter="2"
                                MinWidth="40">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="AreCinderOptionsEnabled" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                        <Button Content="Staff"
                                Margin="0,0,5,5"
                                Padding="8,3"
                                Click="OnPhaseButtonClick" CommandParameter="3"
                                MinWidth="40">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="AreCinderOptionsEnabled" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                        <Button Content="Gwyn"
                                Margin="0,0,5,5"
                                Padding="8,3"
                                Click="OnPhaseButtonClick" CommandParameter="4"
                                MinWidth="40">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="AreCinderOptionsEnabled" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                    </WrapPanel>

                    <StackPanel Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Cast Soulmass"
                                    Margin="0,0,0,5"
                                    Padding="8,3"
                                    Click="CastSoulmass"
                                    HorizontalAlignment="Left"
                                    Width="120">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="AreCinderOptionsEnabled" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <CheckBox Content="Endless Soulmass"
                                      Margin="15,0,0,0"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding IsEndlessSoulmassEnabled}">
                                <CheckBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="AreCinderOptionsEnabled" />
                                    </MultiBinding>
                                </CheckBox.IsEnabled>
                            </CheckBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Lock Phase"
                                      Margin="0,0,10,0"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding IsCinderPhasedLocked}">
                                <CheckBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="AreCinderOptionsEnabled" />
                                    </MultiBinding>
                                </CheckBox.IsEnabled>
                            </CheckBox>
                            <CheckBox Content="No Stagger"
                                      Margin="0,0,0,0"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding IsCinderNoStaggerEnabled}">
                                <CheckBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="AreCinderOptionsEnabled" />
                                    </MultiBinding>
                                </CheckBox.IsEnabled>
                            </CheckBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>