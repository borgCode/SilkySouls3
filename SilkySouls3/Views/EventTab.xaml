<UserControl x:Class="SilkySouls3.Views.EventTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:SilkySouls3.Converters"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="500">

    <UserControl.Resources>
        <converters:BooleanAndConverter x:Key="BooleanAndConverter" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,10">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Event Flags"
                               FontWeight="Bold" />

                    <Border Background="#3498db"
                            CornerRadius="10"
                            Width="12"
                            Height="12"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            ToolTip="Get or set event by Event ID"
                            ToolTipService.InitialShowDelay='100'>
                        <TextBlock Text="i"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="10" />
                    </Border>
                </StackPanel>

                <Grid Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                </Grid>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <TextBlock Text="Event ID:" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <TextBox Width="100" Text="{Binding GetFlagId}" Margin="0,0,10,0" />

                    <Button Content="Get Event"
                            IsEnabled="{Binding AreButtonsEnabled}"
                            Padding="10,3"
                            Margin="10,0,0,0"
                            Click="GetEvent_Click" />

                    <TextBlock Text="State:" VerticalAlignment="Center" Margin="10,0,5,0" />
                    <TextBlock Text="{Binding EventStatusText}"
                               Foreground="{Binding EventStatusColor}"
                               VerticalAlignment="Center" Margin="5,0,10,0" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <TextBlock Text="Event ID:" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <TextBox Width="100" Text="{Binding SetFlagId}" Margin="0,0,10,0" />

                    <ComboBox Width="70" SelectedIndex="{Binding FlagStateIndex}" Margin="0,0,10,0">
                        <ComboBoxItem Content="ON" />
                        <ComboBoxItem Content="OFF" />
                    </ComboBox>

                    <Button Content="Set Event"
                            IsEnabled="{Binding AreButtonsEnabled}"
                            Padding="10,3"
                            Margin="10,0,0,0"
                            Click="SetFlag_Click" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,10">
            <StackPanel Margin="10">
                <TextBlock Text="Game Progression"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <Button x:Name="UnlockMidirButton"  Content="Unlock Midir"
                            Click="UnlockMidir_Click"
                            IsEnabled="{Binding AreButtonsEnabled}"
                            Height="20"
                            Margin="0,5" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,0">
            <StackPanel Margin="10">
                <TextBlock Text="NPC"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <Button Content="Patches to Firelink"
                            Click="MovePatches_Click"
                            IsEnabled="{Binding AreButtonsEnabled}"
                            Height="20"
                            Margin="0,5" />
                </Grid>
            </StackPanel>
        </Border>
        <Border Grid.Row="3"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,10,0,0">
            
            <StackPanel Margin="10">
                <CheckBox Content="Disable Events"
                          IsChecked="{Binding IsDisableEventEnabled}"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0" />
    
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <CheckBox Content="Faster Argo talk speed"
                              IsChecked="{Binding IsArgoSpeedEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0" />
                    <xctk:DecimalUpDown Value="{Binding ArgoSpeed}"
                                        Minimum="0"
                                        Maximum="10.0"
                                        Increment="0.5"
                                        FormatString="F1"
                                        Width="80"
                                        VerticalAlignment="Center"
                                        IsEnabled="{Binding IsArgoSpeedEnabled}"/>
                    <Border Background="#3498db"
                            CornerRadius="10"
                            Width="12"
                            Height="12"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            ToolTip="Must be checked before entering the fight&#x0A;Lower value = Faster talk"
                            ToolTipService.InitialShowDelay='100'>
                        <TextBlock Text="i"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="10" />
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>